version: '3.8'
services:
  api:
    build: .
    ports:
      - "{{serverPort}}:{{serverPort}}"
    volumes:
      # This is the key line: it mounts your local 'src' folder
      # into the '/app/src' folder inside the container.
      - ./src:/app/src
    command: poetry run uvicorn {{packageName}}.main:app --reload --host 0.0.0.0 --port {{serverPort}}