# Use Python 3.9 as you used in conda
FROM python:3.9-slim

# Set environment
ENV PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PATH=/root/.local/bin:$PATH

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    wget \
    ffmpeg \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Clone OpenVoice
RUN git clone https://github.com/myshell-ai/OpenVoice.git
WORKDIR /app/OpenVoice

# Install OpenVoice + MeloTTS
RUN pip install -e .
RUN pip install git+https://github.com/myshell-ai/MeloTTS.git

# Download unidic dictionary
RUN python -m unidic download

# Copy your script into the container
# (replace service.py with the actual filename)
COPY generate_audio_function.py /app/OpenVoice/generate_audio_function.py

# Default command: run script
CMD ["python", "generate_audio_function.py"]

